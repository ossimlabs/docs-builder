<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c" xmlns:rbf="http://www.radiantblue.com/schema/rb/foundation"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.radiantblue.com/schema/rb/foundation
        http://www.radiantblue.com/schema/rb/foundation/rb-foundation-1.0.xsd">


	<bean id="SIRIUS01_tle" class="com.radiantblue.analytics.mechanics.orbit.elementproviders.TLEElementProvider"
		c:line0="SIRIUS-1"
		c:line1="1 26390U 00035A   13040.47321291  .00000064  00000-0  00000+0 0  1312"
		c:line2="2 26390  60.3647 244.4976 2696050 270.1919  59.3156  1.00275047 46219" />

	<bean id="SIRIUS01_propagator" class="com.radiantblue.analytics.mechanics.orbit.ThreadSafeSGP4Propagator"
		c:provider-ref="SIRIUS01_tle" />

	<!-- maneuver rates -->
	<bean id="SIRIUS01_3DegPerSecLimits" class="com.radiantblue.analytics.core.maneuver.r3.RateLimits"
		c:xRate="3.0" c:yRate="3.0" c:zRate="3.0" />

	<bean id="SIRIUS01" class="com.radiantblue.analytics.isr.core.model.asset.Satellite" scope="prototype">

		<property name="name" value="SIRIUS01" />
		<property name="id" value="26390" />

		<property name="propagator" ref="SIRIUS01_propagator" />

		<property name="interpolator">
			<bean
				class="com.radiantblue.analytics.mechanics.statevectors.RawStateVectorProviderInterpolator" />
		</property>

		<property name="revAndPassCalculator">
			<bean class="com.radiantblue.analytics.mechanics.orbit.revandpass.AscendingNodeRevAndPassCalculator">
				<property name="epochRevAndPass">
					<bean class="com.radiantblue.analytics.mechanics.orbit.revandpass.RevAndPassFromTLE"
						p:tle-ref="SIRIUS01_tle" />
				</property>

				<property name="sampleStep">
					<rbf:timespan units="minutes" value="10" />
				</property>

				<property name="stateVectorProvider" ref="SIRIUS01_propagator" />

			</bean>
		</property>

		<property name="accessConstraints">
			<list>
				<bean class="com.radiantblue.analytics.aerospace.geometry.constraint.GrazeConstraint">
					<property name="range">
						<rbf:angular_range units="deg" min="10" max="90" />
					</property>
				</bean>

				<bean class="com.radiantblue.analytics.aerospace.geometry.constraint.SecondaryLineOfSightConstraint">
					<property name="secondaryTarget">
						<bean class="com.radiantblue.analytics.geodesy.GeodeticPoint" factory-method="fromLatLonAlt">
							<constructor-arg index="0">
								<rbf:angle units="deg" value="38" />
							</constructor-arg>
							<constructor-arg index="1">
								<rbf:angle units="deg" value="-77" />
							</constructor-arg>
							<constructor-arg index="2">
								<rbf:length units="km" value="0" />
							</constructor-arg>
						</bean>
					</property>

					<property name="setupTime">
						<rbf:timespan units="seconds" value="30" />
					</property>
					<property name="tearDownTime">
						<rbf:timespan units="seconds" value="45" />
					</property>

					<property name="secondaryConstraints">
						<list>
							<bean class="com.radiantblue.analytics.aerospace.geometry.constraint.GrazeConstraint">
								<property name="range">
									<rbf:angular_range units="deg" min="5" max="90" />
								</property>
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>

		<property name="payloads">
			<list>
				<bean class="com.radiantblue.analytics.isr.core.model.payload.Payload">
					<property name="name" value="SIRIUS01_Payload" />

					<property name="sensors">
						<list>
							<bean class="com.radiantblue.analytics.isr.eo.IRSensor" p:name="SIRIUS01_Sensor">
								<property name="displayFOR">
									<bean id="GrazeFootprint" class="com.radiantblue.analytics.aerospace.geometry.footprint.GrazeFOR">
										<property name="grazeRange">
											<rbf:angular_range units="deg" min="20"
												max="90" />
										</property>

										<property name="step">
											<rbf:angle units="deg" value="10" />
										</property>
									</bean>
								</property>
								<property name="modes">
									<list>
										<bean id="circularBoresightMode" class="com.radiantblue.analytics.isr.eo.framer.CircularBoresightMode"
											p:name="SIRIUS01_BoresightMode">

											<property name="boresightProjector">
												<bean
													class="com.radiantblue.analytics.aerospace.geometry.boresight.FixedFOVBoresightProjector">
													<property name="angleStep">
														<rbf:angle units="deg" value="5" />
													</property>
													<property name="earthLimTolerance">
														<rbf:angle units="deg" value="0.01" />
													</property>
													<property name="fieldOfView">
														<rbf:angle units="deg" value="2" />
													</property>
												</bean>

											</property>
										</bean>

									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>

		<property name="maneuverModel">
			<bean class="com.radiantblue.analytics.gnc.maneuver.EigenAxisManeuverModel">
				<property name="rateSelector">
					<bean class="com.radiantblue.analytics.core.maneuver.r3.EllipsoidalEigenAxisRateSelector">
						<property name="javLimits">
							<bean class="com.radiantblue.analytics.core.maneuver.r3.JAVLimits"
								c:velocityLimits-ref="SIRIUS01_3DegPerSecLimits"
								c:accelerationLimits-ref="SIRIUS01_3DegPerSecLimits" c:jerkLimits-ref="SIRIUS01_3DegPerSecLimits" />
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

</beans>